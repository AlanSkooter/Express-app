datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int     @id @default(autoincrement())
  login        String  @unique
  passwordHash String
  name         String
}

model Message {
  id           Int        @id @default(autoincrement())
  message      String 
  date         DateTime   @default(now())
  author       String
}